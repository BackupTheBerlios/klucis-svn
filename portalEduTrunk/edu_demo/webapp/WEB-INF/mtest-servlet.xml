	<value>root</value>
	</property>
	<property name="password">
	<value>root</value>
	</property>
	</bean>	
	-->
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="mappingResources">
			<list>
				<value>
					/WEB-INF/classes/lv/webkursi/mtest/domain/QuestionType.hbm.xml</value>
				<value>
					/WEB-INF/classes/lv/webkursi/mtest/domain/Person.hbm.xml</value>
				<value>
					/WEB-INF/classes/lv/webkursi/mtest/domain/ContentItem.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
	</bean>
	
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		
		<property name="interceptors">
			<list>
				<ref bean="localeChangeInterceptor"/>
			</list>
		</property>
		
		<property name="mappings">
			<props>
				<prop key="/welcome">welcomeController</prop>
				<prop key="/dbinit">dbInitController</prop>
				<prop key="/person/login">loginController</prop>
				<prop key="/person/logout">logoutController</prop>
				<prop key="/person/new">personFormController</prop>
				<prop key="/person/edit">personFormController</prop>
				<prop key="/person/listall">personListAllController</prop>
				<prop key="/person/delete">personDeleteController</prop>
				<prop key="/questiontype/new"> questionTypeFormController</prop>
				<prop key="/questiontype/edit"> questionTypeFormController</prop>
				<prop key="/questiontype/listall">
					questionTypeListAllController</prop>
				<prop key="/questiontype/delete">
					questionTypeDeleteController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.ResourceBundleViewResolver">
		<property name="basename" value="views-portaledu"/>
		<property name="defaultParentView" value="modelView"/>
		<property name="order">
			<value>0</value>
		</property>
	</bean>
	
	<bean id="viewResolverPlain"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/plain/"/>
		<property name="suffix" value=".jsp"/>
		<property name="order">
			<value>1</value>
		</property>
	</bean>
	
</beans>