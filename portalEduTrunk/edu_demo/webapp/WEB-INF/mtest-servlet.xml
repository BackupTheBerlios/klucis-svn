<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
	
	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.CookieLocaleResolver"/>
	
	<bean id="localeChangeInterceptor"
		class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor"/>
	
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		
		<property name="basename" value="messages"/>
	</bean>
	
	<bean id="welcomeController"
		class="lv.webkursi.mtest.lab02.mvc.FixedController">
	</bean>
	
	<bean id="loginController"
		class="lv.webkursi.mtest.lab02.mvc.LoginController">
		<property name="dao" ref="personDao"/>
	</bean>
	
	<bean id="logoutController"
		class="lv.webkursi.mtest.lab02.mvc.LogoutController">
	</bean>
	
	<bean id="dbInitController"
		class="lv.webkursi.mtest.lab02.mvc.DBInitController">
		<property name="personDao" ref="personDao"/>
		<property name="questionTypeDao" ref="questionTypeDao"/>
	</bean>
	
	<bean id="personFormController"
		class="lv.webkursi.mtest.lab02.mvc.PersonFormController">
		<property name="validator">
			<bean class="lv.webkursi.mtest.lab02.data.PersonValidator"/>
		</property>
		<property name="dao" ref="personDao"/>
		<property name="formView">
			<value>person_new</value>
		</property>
		<property name="successView">
			<value>fw_person_listall</value>
		</property>
	</bean>
	
	<bean id="personListAllController"
		class="lv.webkursi.mtest.lab02.mvc.ListAllController">
		<property name="dao" ref="personDao"/>
		<property name="viewName">
			<value>person_listall</value>
		</property>
	</bean>
	
	<bean id="personDeleteController"
		class="lv.webkursi.mtest.lab02.mvc.DeleteController">
		<property name="dao" ref="personDao"/>
		<property name="viewName">
			<value>person_listall</value>
		</property>
	</bean>
	
	<bean id="questionTypeFormController"
		class="lv.webkursi.mtest.lab02.mvc.QuestionTypeFormController">
		<property name="validator">
			<bean class="lv.webkursi.mtest.lab02.data.QuestionTypeValidator"/>
		</property>
		<property name="dao" ref="questionTypeDao"/>
		<property name="formView">
			<value>questiontype_new</value>
		</property>
		<property name="successView">
			<value>fw_questiontype_listall</value>
		</property>
	</bean>
	
	<bean id="questionTypeListAllController"
		class="lv.webkursi.mtest.lab02.mvc.ListAllController">
		<property name="dao" ref="questionTypeDao"/>
		<property name="viewName">
			<value>questiontype_listall</value>
		</property>
	</bean>
	
	<bean id="questionTypeDeleteController"
		class="lv.webkursi.mtest.lab02.mvc.DeleteController">
		<property name="dao" ref="questionTypeDao"/>
		<property name="viewName">
			<value>questiontype_listall</value>
		</property>
	</bean>
	
	<bean id="personDao" class="lv.webkursi.mtest.lab02.dao.DaoFactory">
		<property name="sessionFactory" ref="sessionFactory"/>
		<property name="clazz" value="lv.webkursi.mtest.lab02.domain.Person"/>
	</bean>
	
	<bean id="questionTypeDao" class="lv.webkursi.mtest.lab02.dao.DaoFactory">
		<property name="sessionFactory" ref="sessionFactory"/>
		<property name="clazz"
			value="lv.webkursi.mtest.lab02.domain.QuestionType"/>
	</bean>
	
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://localhost/portaledu"/>
		<property name="username" value="root"/>
		<property name="password" value="root"/>
	</bean>
	
	<!--		
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
	destroy-method="close">
	<property name="driverClassName">
	<value>com.mysql.jdbc.Driver</value>
