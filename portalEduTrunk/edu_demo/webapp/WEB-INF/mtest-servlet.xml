	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		
		<property name="interceptors">
			<list>
				<ref bean="localeChangeInterceptor"/>
			</list>
		</property>
		
		<property name="mappings">
			<props>
				<prop key="/welcome">welcomeController</prop>
				<prop key="/user/new">userNewFormController</prop>
				<prop key="/dbinit">dbInitController</prop>
				<prop key="/user/listall">userListAllController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.ResourceBundleViewResolver">
		<property name="basename" value="views-portaledu"/>
		<property name="defaultParentView" value="modelView"/>
	</bean>
	
</beans>