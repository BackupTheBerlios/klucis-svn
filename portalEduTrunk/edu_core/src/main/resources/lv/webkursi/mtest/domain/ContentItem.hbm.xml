<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="lv.webkursi.mtest.lab02.domain.ContentItem" table="CONTENT">
		
		<id name="id" column="CONTENT_ID" type="java.lang.Long" unsaved-value="-1">
			<generator class="native"/>
		</id>
		<property name="description" type="string" column="DESCRIPTION" length="255"
			not-null="true"/>
		
		<joined-subclass name="lv.webkursi.mtest.lab02.domain.Module"
			table="MODULE">
			<key column="CONTENT_ID"/>
			
			<property name="name" type="string" column="NAME" length="20"
				not-null="true"/>
			<property name="title" type="string" column="TITLE" length="255"
				not-null="true"/>
			
			<list name="questions" cascade="all">
				<key column="MODULE_ID"/>
				<list-index column="QUESTION_NUM"/>
				<one-to-many class="lv.webkursi.mtest.lab02.domain.Question"/>
			</list>
			<set name="images" cascade="all">
				<key column="MODULE_ID"/>
				<one-to-many class="lv.webkursi.mtest.lab02.domain.Image"/>
			</set>
		</joined-subclass>
		
		<joined-subclass name="lv.webkursi.mtest.lab02.domain.Image"
			table="IMAGE">
			<key column="CONTENT_ID"/>
			<property name="name" type="string" column="NAME" length="20"
				not-null="true"/>
			
		</joined-subclass>
		
		<joined-subclass name="lv.webkursi.mtest.lab02.domain.Question"
			table="QUESTION">
			<key column="CONTENT_ID"/>
			<many-to-one name="questionType" column="QUESTION_TYPE_ID"
				not-null="true" lazy="false"/>
			
			<list name="variants" cascade="all-delete-orphan">
				<key column="QUESTION_ID" not-null="true"/>
				<list-index column="VARIANT_NUM"/>
				<one-to-many class="lv.webkursi.mtest.lab02.domain.Variant"/>
			</list>
			
		</joined-subclass>
		<joined-subclass name="lv.webkursi.mtest.lab02.domain.Variant"
			table="VARIANT">
			<key column="CONTENT_ID"/>
			<property name="label" type="string" column="NAME" length="20"
				not-null="true"/>
		</joined-subclass>
		
	</class>
</hibernate-mapping>