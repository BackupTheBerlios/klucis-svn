<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="maintenanceServiceBean"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>lv.webkursi.mtest.core.intercepting.IMaintenanceService</value>
		</property>
		<property name="target">
			<ref bean="maintenanceServiceImpl"/>
		</property>
		<property name="interceptorNames">
			<list>
				<value>loggingInterceptor</value>
			</list>
		</property>
	</bean>
	
	<bean id="maintenanceServiceImpl" class="lv.webkursi.mtest.core.intercepting.MaintenanceService"/>
	
	<bean id="loggingInterceptor" class="lv.webkursi.mtest.core.intercepting.LoggingInterceptor"/>
  
</beans>
