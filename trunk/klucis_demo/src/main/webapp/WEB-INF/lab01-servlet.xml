<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
	
	<bean id="velocityConfig"
		class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
		<property name="resourceLoaderPath">
			<value>/WEB-INF/templates/velocity/</value>
		</property>
		<property name="velocityProperties">
			<props>
				<prop key="input.encoding">UTF-8</prop>
				<prop key="output.encoding">UTF-8</prop>				
				<prop key="marsMacro.resource.loader.class">org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader</prop>
				<prop key="resource.loader">file,marsMacro</prop>
				<prop key="velocimacro.library">lv/webkursi/klucis/view/marsmacro.vm</prop>
			</props>
		</property>
	</bean>
	
	
	<bean id="servletContextFactory"
	class="org.springframework.web.context.support.ServletContextFactoryBean"/>
	
	<bean id="servletBaseDirFactory"
	class="lv.webkursi.klucis.web.ServletBaseDirFactory">
	<property name="servletContext">
	<ref bean="servletContextFactory"/>
	</property>
	</bean>
	
	
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/img/**">staticImageController</prop>
				<prop key="/main/**">mainController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.velocity.VelocityViewResolver">
		<property name="viewClass">
			<value>
				org.springframework.web.servlet.view.velocity.VelocityView</value>
		</property>
		<property name="suffix">
			<value>.vm</value>
		</property>
		<property name="exposeSpringMacroHelpers">
			<value>true</value>
		</property>
		<property name="toolboxConfigLocation" value="/WEB-INF/toolbox.xml"/>
		<property name="order">
			<value>1</value>
		</property>
		<property name="contentType">
			<value>image/svg+xml;charset=UTF-8</value> 
			<!-- <value>text/xml;charset=UTF-8</value> -->
		</property>
	</bean>
	
	<bean id="klucisDescription"
	class="lv.webkursi.klucis.data.FileModelFactory">
	<property name="path">
	<value>/WEB-INF/conf/</value>
	</property>
	<property name="fileName">
	<value>description.n3</value>
	</property>
	<property name="baseDir">
	<ref bean="servletBaseDirFactory"/>
	</property>
	</bean>
	
	<bean id="staticImageController" class="lv.webkursi.klucis.mvc.StaticImageController">
	</bean>
	
	<bean id="mainController" class="lv.webkursi.klucis.mvc.MainController">
	    <property name="componentManager" ref="componentManager"/>
	    <property name="viewResolver" ref="viewResolver" /> 
		<property name="model" ref="klucisDescription"/>
	</bean>
	
	<bean id="componentManager" class="lv.webkursi.klucis.component.ComponentManager">
		<property name="factoryCatalog" ref="factoryCatalog"/>	
	</bean>

	
	<bean id="factoryCatalog"
	class="lv.webkursi.klucis.component.FactoryCatalog">
	<property name="map">
	<map>
		<entry
			key="http://www.webkursi.lv/schema/20061008/klucis#TopComponent">
			<bean class="lv.webkursi.klucis.component.geom2d.TopComponentFactory"/>
		</entry>
		<entry key="http://www.webkursi.lv/schema/20061008/klucis#HorizontalRow">
			<bean class="lv.webkursi.klucis.component.geom2d.HorizontalRowFactory"/>
		</entry>
		<entry
			key="http://www.webkursi.lv/schema/20061008/klucis#Rectangle">
			<bean class="lv.webkursi.klucis.component.geom2d.RectangleFactory"/>
		</entry>
		<entry
			key="http://www.webkursi.lv/schema/20061008/klucis#Transform">
			<bean class="lv.webkursi.klucis.component.geom2d.TransformFactory"/>
		</entry>
		<entry
			key="http://www.webkursi.lv/schema/20061008/klucis#Path">
			<bean class="lv.webkursi.klucis.component.geom2d.PathFactory"/>
		</entry>	
	</map>
	</property>
	</bean>	
</beans>